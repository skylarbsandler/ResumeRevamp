@model Word
@{
    ViewData["Title"] = "Home Page";
}

<div>
    <h3 class="display-4">Find New, Impfactful Words for Your Resume</h3>
    <center>
        <form asp-controller="Home" asp-action="Index">
            <table>
                <tr>
                    <td>Word: </td>
                    <td><input class="form-control" type="text" id="OriginalWord" name="OriginalWord" placeholder="Ex. Assist, Strong, Use" /></td>
                    <td><input class="btn btn-info" type="submit" value="Submit" /></td>
                </tr>
            </table>
            <hr />
        </form>
    </center>
    @if (Model != null && Model.Synonyms != null)
    {
        <table class="table table-bordered table-striped table-sm">
            <thead>
                <tr>
                    <th style="color: white">Synonyms:</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var synonym in Model.Synonyms)
                {
                    <tr>
                        <td class="white-text">
                            @Html.DisplayFor(modelItem => synonym)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No synonyms found. Try another variation (ex. use, used, utilized) or another word.</p>
    }
</div>

<style>
    .white-text {
        color: white;
    }
</style>

